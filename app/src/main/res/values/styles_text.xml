<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Tab -->
	<style name="CustomTabText" parent="TextAppearance.AppCompat.Button">
		<item name="android:textSize">@dimen/text_body</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">@color/text_light_1</item>
	</style>

	<!-- Edit Text -->
	<style name="CustomEditTextTheme">
		<item name="android:imeOptions">actionNext</item>
		<item name="android:singleLine">true</item>
		<item name="colorControlNormal">@color/line</item>
		<item name="colorControlActivated">@color/color_primary</item>
		<item name="android:textColorPrimary">@color/text_dark</item>
		<item name="android:textSize">@dimen/text_body</item>
	</style>

	<style name="CustomEditText">
		<item name="android:theme">@style/CustomEditTextTheme</item>
		<item name="android:paddingTop">@dimen/item_margin_tiny</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<!-- Text -->
	<style name="ParentText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/text_dark</item>
	</style>

	<style name="BodyRegular" parent="ParentText">
		<item name="android:textSize">@dimen/text_body</item>
	</style>

	<style name="BodyMedium" parent="BodyRegular">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="SubheadingRegular" parent="ParentText">
		<item name="android:textSize">@dimen/text_subheading</item>
		<item name="android:textColor">@color/text_dark</item>
	</style>

	<style name="SubheadingMedium" parent="SubheadingRegular">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TitleRegular" parent="ParentText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/text_dark</item>
		<item name="android:textSize">@dimen/text_title</item>
	</style>

	<style name="TitleMedium" parent="TitleRegular">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TitleBigRegular" parent="ParentText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/text_dark</item>
		<item name="android:textSize">@dimen/text_title_big</item>
	</style>

	<style name="TitleBigMedium" parent="TitleBigRegular">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Word" parent="ParentText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/text_dark</item>
		<item name="android:textSize">@dimen/text_word</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="WordBig" parent="Word">
		<item name="android:textSize">@dimen/text_word_big</item>
	</style>

	<style name="ClickableRegular">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:clickable">true</item>
		<item name="android:background">@drawable/bg_clickable</item>
		<item name="android:padding">@dimen/item_margin_tiny</item>
		<item name="android:textSize">@dimen/text_subheading</item>
		<item name="android:textColor">@color/color_accent</item>
	</style>

	<style name="ClickableMedium" parent="ClickableRegular">
		<item name="android:textStyle">bold</item>
	</style>
</resources>