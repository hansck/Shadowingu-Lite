<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Button Theme -->
	<style name="ButtonTheme">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">@dimen/btn_default</item>
		<item name="android:minWidth">@dimen/btn_min_width</item>
		<item name="android:paddingRight">@dimen/btn_padding</item>
		<item name="android:paddingLeft">@dimen/btn_padding</item>
		<item name="android:textSize">@dimen/text_body</item>
		<item name="android:textColor">@drawable/txt_light_button</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="SignUpTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorButtonNormal">@color/color_primary</item>
	</style>

	<!-- Button Style-->
	<style name="ButtonBroad" parent="ButtonTheme">
		<item name="android:layout_height">@dimen/btn_large</item>
	</style>

	<!-- Icon -->
	<style name="LogoIcon">
		<item name="android:layout_height">@dimen/avatar_medium</item>
		<item name="android:layout_width">@dimen/avatar_medium</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:background">@drawable/ic_launcher_foreground</item>
	</style>

	<style name="PrefixIcon">
		<item name="android:layout_width">@dimen/icon_field</item>
		<item name="android:layout_height">@dimen/icon_field</item>
	</style>

	<!-- Progress Bar -->
	<style name="ProgressBar">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:color">@color/color_primary</item>
		<item name="android:layout_marginTop">@dimen/item_margin_normal</item>
	</style>
</resources>