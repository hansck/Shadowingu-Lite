<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginStart="@dimen/item_margin_normal"
	android:layout_marginEnd="@dimen/item_margin_normal"
	card_view:cardCornerRadius="@dimen/card_radius"
	card_view:cardElevation="@dimen/card_elevation"
	card_view:cardUseCompatPadding="true">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/bg_clickable">

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="100dp">

			<ImageView
				android:id="@+id/imgBackground"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:clickable="true"
				android:focusable="true"
				android:scaleType="fitXY"
				tools:src="@drawable/bg_blue" />

			<ImageView
				android:id="@+id/icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end|bottom"
				android:clickable="true"
				android:focusable="true"
				android:scaleType="centerCrop"
				tools:src="@drawable/ic_topic_canteen_2" />
		</FrameLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true">

			<TextView
				android:id="@+id/topic"
				style="@style/TitleMedium"
				android:layout_marginStart="@dimen/item_margin_normal"
				android:layout_marginTop="@dimen/item_margin_small"
				android:layout_marginEnd="@dimen/item_margin_normal"
				android:gravity="start"
				android:textColor="@color/text_white"
				tools:text="At Canteen" />
		</RelativeLayout>
	</RelativeLayout>
</android.support.v7.widget.CardView>